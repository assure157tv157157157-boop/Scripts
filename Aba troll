local Section = Tab9:AddSection({"Kill"})

local DropdownKillPullMethod = TrollTab:AddDropdown({
    Name = "Selecionar M√É¬©todo (Matar/Puxar)",
    Description = "Escolha o m√É¬©todo para matar ou puxar",
    Options = {"Sof√É¬°", "√É‚Äùnibus"},
